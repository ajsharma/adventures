<%= form_for(@adventure) do |f| %>
  <%# inputs %>
  <div class="field">
    <%= f.label :name, "I want to..." %>
    <div class="input-append">
      <%= f.text_field :name, :placeholder => "Type what you want to do.", :autofocus => "autofocus" %>
      <%= f.submit "Next", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
