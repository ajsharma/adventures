<%# Block of user's moments %>
<% unless @moments.empty? %>
  <h1>Your moments</h1>

  <ul class="unstyled">
    <% @moments.each do |moment| %>
      <li>
        <h2><%= link_to moment.name, share_moment_path(moment.muddle) %></h2>
        <% unless moment.positive_responses.empty? %>
          <ul class="unstyled inline">
            <% moment.positive_responses.each do |response| %>
              <li>
                <%= image_tag response.user.image_by_dimension, :class => "img-circle" %> <%= response.user.name %> <span class="muted"><%= response.hearts_count %>x</span>
              </li>
            <% end %>
          </ul>
        <% end %>

        <% unless moment.description.blank? %>
          <%= auto_link(simple_format(moment.description), :html => { :target => "_blank" }) %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if can? :create, Moment %>
  <%= link_to 'New Moment', new_moment_path %>
<% end %>